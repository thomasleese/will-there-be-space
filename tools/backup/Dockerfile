FROM python:2.7

# Create user first.
RUN groupadd -r willtherebespace && useradd -r -g willtherebespace willtherebespace

# Install gosu.
RUN gpg --keyserver pool.sks-keyservers.net --recv-keys B42F6819007F00F88E364FD4036A9C25BF357DD4
RUN curl -o /usr/local/bin/gosu -SL "https://github.com/tianon/gosu/releases/download/1.2/gosu-$(dpkg --print-architecture)" \
    && curl -o /usr/local/bin/gosu.asc -SL "https://github.com/tianon/gosu/releases/download/1.2/gosu-$(dpkg --print-architecture).asc" \
    && gpg --verify /usr/local/bin/gosu.asc \
    && rm /usr/local/bin/gosu.asc \
    && chmod +x /usr/local/bin/gosu

# Install s3cmd and Postgres.
# Note that the version of `postgresql` must be kept up-to-date with the
# version being used in production.
RUN pip install s3cmd
RUN apt-get update \
        && apt-get install -y postgresql-common \
        && apt-get install -y postgresql-9.4

# Install backup script.
COPY backup.sh /usr/bin/willtherebespace-backup.sh

WORKDIR /backups

# Add entrypoint.
COPY docker-entrypoint.sh /entrypoint.sh
ENTRYPOINT ["/entrypoint.sh"]

CMD ["willtherebespace-backup.sh"]
